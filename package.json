{
  "name": "qr-prizes-app",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:prod": "prisma migrate deploy && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
  "typecheck": "tsc -p tsconfig.app.json --noEmit",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "db:seed": "prisma db seed",
    "db:push": "prisma db push",
    "seed": "tsx prisma/seed.ts",
    "smoke:scanner": "tsx scripts/smoke-scanner.ts",
    "smoke:scanner:code": "tsx scripts/smoke-scanner-code.ts",
  "smoke:attendance": "tsx scripts/smoke-attendance.ts",
    "posters:global": "tsx scripts/generate-global-posters.ts",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npm run lint && npm run typecheck && npm test",
    "e2e:flow": "tsx scripts/e2eFlow.ts",
    "e2e": "playwright test",
    "reset:db": "tsx scripts/resetDb.ts",
    "reset:db:seed": "npm run reset:db -- --seed",
    "backup:batches": "tsx scripts/backup-batches.ts",
    "restore:zip": "tsx scripts/restore-batches-from-zip.ts",
  "verify:restore": "tsx scripts/verify-restore.ts",
  "purge:batches": "tsx scripts/purge-batches.ts",
  "tasks:clear": "set CONFIRM=YES && tsx scripts/clearTasks.ts",
    "reconcile:prizes": "tsx scripts/reconcile-prizes.ts",
  "verify:postgres": "tsx scripts/verify-postgres.ts",
  "pg:baseline": "tsx scripts/pgBaseline.ts --push",
    "cron:enable-tokens": "tsx scripts/enable-scheduled.ts",
    "cron:enable-tokens:today": "node -e \"fetch(require('node:process').env.CRON_BASE_URL+'/api/system/tokens/enable-scheduled',{method:'POST',headers:{'x-cron-secret':require('node:process').env.CRON_SECRET,'Content-Type':'application/json'},body:'{}'}).then(r=>r.text()).then(t=>console.log(t)).catch(e=>console.error(e))\"",
    "postinstall": "prisma generate"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
  "@prisma/client": "^5.22.0",
    "@zxing/browser": "^0.1.5",
    "archiver": "^6.0.2",
    "bcryptjs": "^3.0.2",
    "date-fns": "^3.6.0",
    "framer-motion": "^12.23.12",
    "luxon": "^3.7.2",
    "next": "^14.2.32",
    "node-cron": "^4.2.1",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recharts": "^2.12.0",
    "sharp": "^0.32.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/archiver": "^6.0.3",
    "@types/node": "20.11.30",
    "@types/qrcode": "^1.5.5",
    "@types/react": "18.2.23",
    "@types/react-dom": "18.2.8",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "jszip": "^3.10.1",
    "postcss": "^8.5.6",
    "prettier": "^3.3.2",
  "prisma": "^5.22.0",
    "tailwindcss": "3.4.10",
    "tsx": "^4.20.5",
    "typescript": "5.4.5",
    "vitest": "^1.6.1"
  }
}
